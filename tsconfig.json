{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@lib/*": ["src/lib/*"],
      "@appetizers/*": ["src/features/appetizers/*"],
      "@desserts/*": ["src/features/desserts/*"],
      "@drinks/*": ["src/features/drinks/*"],
      "@mainCourses/*": ["src/features/main-courses/*"],
      "@sideDishes/*": ["src/features/side-dishes/*"],
      "@soups/*": ["src/features/soups/*"]
    }
  }
}
